{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 6000
    },
    "firestore": {
      "port": 6001
    },
    "storage": {
      "port": 6002
    },
    "functions": {
      "port": 6004
    },
    "ui": {
      "enabled": true,
      "port": 6003
    }
  }
}

